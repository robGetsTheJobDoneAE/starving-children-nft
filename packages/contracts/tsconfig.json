{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {}
  },
  "files": ["./hardhat.config.ts"],

  "include": [
    "./scripts",
    "hardhat.config.ts",
    "./typechain-types/**/*.ts",
    "./typechain-types/**/*.d.ts",
    "./artifacts/**/*.json"
  ]
}
